<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://UserDetailView.title"
      focusComponent="form">
    <data>
        <collection id="departmentsDc" class="com.company.jmixdemo.entity.Department">
            <loader id="departmentsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Department e
                    order by e.name asc]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <instance id="userDc"
                  class="com.company.jmixdemo.entity.User">
            <fetchPlan extends="_base">
                <property name="department" fetchPlan="_base"/>
                <property name="steps" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="stepsDc" property="steps"/>
        </instance>
    </data>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <formLayout id="form" dataContainer="userDc">
            <textField id="usernameField" property="username" readOnly="true"/>
            <passwordField id="passwordField"
                           label="msg://com.company.jmixdemo.entity/User.password"
                           required="true"
                           visible="false"/>
            <passwordField id="confirmPasswordField"
                           label="msg://confirmPassword"
                           required="true"
                           visible="false"/>
            <textField id="firstNameField" property="firstName"/>
            <textField id="lastNameField" property="lastName"/>
            <textField id="emailField" property="email"/>
            <comboBox id="timeZoneField" property="timeZoneId" clearButtonVisible="true"/>
            <checkbox id="activeField" property="active"/>
            <!--            <entityPicker id="departmentField" property="department">-->
            <!--                <actions>-->
            <!--                    <action id="entityLookup" type="entity_lookup"/>-->
            <!--                    <action id="entityClear" type="entity_clear"/>-->
            <!--                </actions>-->
            <!--            </entityPicker>-->
            <entityComboBox id="departmentField" property="department" itemsContainer="departmentsDc"/>
            <datePicker id="joiningDateField" property="joiningDate"/>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="stepsDataGrid.createAction"/>
            <button action="stepsDataGrid.editAction"/>
            <button action="stepsDataGrid.removeAction"/>
        </hbox>
        <dataGrid id="stepsDataGrid" dataContainer="stepsDc" width="100%" height="100%">
            <actions>
                <action id="createAction" type="list_createAction"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_removeAction"/>
            </actions>
            <columns>
                <column property="id"/>
                <column property="dueDate"/>
                <column property="version"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
